<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="HellowWorld.StackLayoutPage2">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0">
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout>
        <StackLayout Padding="10">
            <Label Text="nyc_photogapher" />
        </StackLayout>
        <StackLayout>
            <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
        </StackLayout>
        <StackLayout Padding="10, 0"
            Orientation="Horizontal" HorizontalOptions="Start">
            <Button Text="Like" TextColor="Blue" FontSize="14"/>
            <Button Text="Comment" TextColor="Blue" FontSize="14"/>
            <Button Text="Share" TextColor="Blue" FontSize="14"/>
        </StackLayout>
        <StackLayout Padding="10">
            <BoxView Color="#f0f0f0" HeightRequest="1" />
            <Label Text="700 likes" />
            <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark."  
                TextColor="#444"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
