<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="#354242"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="HellowWorld.DailPage">
    <Grid Padding="40" RowSpacing="10" ColumnSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="3" Text="" TextColor="White"
            VerticalOptions="Center" HorizontalOptions="Center" 
            FontSize="50" x:Name="label" />
        
        <Button Grid.Row="1" Grid.Column="0" Text="1" TextColor="#28282c" 
            FontSize="30" BorderRadius="30"
            BackgroundColor="#fff" Clicked="Handle_Clicked" />
        <Button Grid.Row="1" Grid.Column="1" Text="2" TextColor="#28282c" 
            FontSize="30" BorderRadius="30"
            BackgroundColor="#fff" Clicked="Handle_Clicked"/>
        <Button Grid.Row="1" Grid.Column="2" Text="3" TextColor="#28282c" 
            FontSize="30" BorderRadius="30"
            BackgroundColor="#fff" Clicked="Handle_Clicked"/>
        <Button Grid.Row="2" Grid.Column="0" Text="4" TextColor="#28282c" 
            FontSize="30" BorderRadius="30"
            BackgroundColor="#fff" Clicked="Handle_Clicked"/>
        <Button Grid.Row="2" Grid.Column="1" Text="5" TextColor="#28282c" 
            FontSize="30" BorderRadius="30"
            BackgroundColor="#fff" Clicked="Handle_Clicked"/>
        <Button Grid.Row="2" Grid.Column="2" Text="6" TextColor="#28282c" 
            FontSize="30" BorderRadius="30"
            BackgroundColor="#fff" Clicked="Handle_Clicked"/>
        <Button Grid.Row="3" Grid.Column="0" Text="7" TextColor="#28282c" 
            FontSize="30" BorderRadius="30"
            BackgroundColor="#fff" Clicked="Handle_Clicked"/>
        <Button Grid.Row="3" Grid.Column="1" Text="8" TextColor="#28282c" 
            FontSize="30" BorderRadius="30"
            BackgroundColor="#fff" Clicked="Handle_Clicked"/>
        <Button Grid.Row="3" Grid.Column="2" Text="9" TextColor="#28282c" 
            FontSize="30" BorderRadius="30"
            BackgroundColor="#fff" Clicked="Handle_Clicked"/>
        <Button Grid.Row="4" Grid.Column="1" Text="0" TextColor="#28282c" 
            FontSize="30" BorderRadius="30"
            BackgroundColor="#fff" Clicked="Handle_Clicked"/>
        <Button Grid.Row="5" Grid.ColumnSpan="3" Text="Dial" TextColor="#28282c" 
            FontSize="30" BorderRadius="30" BackgroundColor="#96ca2d"
            Clicked="Handle_Clicked_Dail"/>
    </Grid>
</ContentPage>
